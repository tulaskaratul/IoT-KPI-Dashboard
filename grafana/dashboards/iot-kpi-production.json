          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT \n  d.name as device_name,\n  ROUND(AVG(ds.uptime_percentage)::numeric, 2) as uptime_percentage,\n  ROUND(AVG(ds.avg_rss)::numeric, 2) as avg_rss,\n  SUM(ds.active_minutes) as total_active_minutes,\n  MAX(tl.timestamp) as last_seen\nFROM devices d\nLEFT JOIN device_status ds ON d.device_id = ds.device_id\nLEFT JOIN telemetry_logs tl ON d.device_id = tl.device_id\nWHERE \n  $__timeFilter(ds.window_start)\n  AND (d.is_test_device = false OR d.is_test_device IS NULL)\nGROUP BY d.device_id, d.name\nORDER BY uptime_percentage DESC",
          "refId": "A"
        }
