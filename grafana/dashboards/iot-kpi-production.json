          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT \n  CASE \n    WHEN MAX(tl.timestamp) >= NOW() - INTERVAL '5 minutes' THEN 'Active'\n    ELSE 'Inactive'\n  END as status,\n  COUNT(DISTINCT d.device_id) as count\nFROM devices d\nLEFT JOIN telemetry_logs tl ON d.device_id = tl.device_id\nWHERE d.is_test_device = false OR d.is_test_device IS NULL\nGROUP BY \n  CASE \n    WHEN MAX(tl.timestamp) >= NOW() - INTERVAL '5 minutes' THEN 'Active'\n    ELSE 'Inactive'\n  END",
          "refId": "A"
